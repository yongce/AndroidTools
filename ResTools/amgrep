#/bin/sh

# Grep string in apks

if [ $# -lt 2 ]; then
    echo "Usage: amgrep <target string> <directories or files>"
fi

filelist=`find $@ 2>/dev/null`

for i in $filelist; do
    if [ -d $i ]; then
        continue
    fi

    unzip -t $i AndroidManifest.xml 2>/dev/null | grep -i OK 1>/dev/null 2>/dev/null

    if [ $? -ne 0 ]; then
        continue
    fi

    echo ">>> Processing $i..."
    amprint $i | grep --color $1
done

